.page {
    width: 90%;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.input_container {
    width: 100%;
    box-sizing: border-box;
    padding: 15rpx 10rpx;
    margin: 30rpx auto 0;
    border-radius: 5px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.input_container.bg {
    background-color: #207caa;
    color: #fff;
}

.input_container .time {
    border: 1px solid #8a8a8a;
}

.input_container .title {
    white-space: nowrap;
    margin-right: 10rpx;
}

.input_container input {
    flex: 1;
    height: 70rpx;
    padding: 0 20px;
    box-sizing: border-box;
    border-radius: 5px;
    background-color: #fff;
    color: #414141;
    text-align: center;
}

.input_container  .button {
    height: 50rpx;
    white-space: nowrap;
    margin-left: 10rpx;
    padding: 5rpx 25rpx;
    background-color: #fd7321;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.input_container picker {
    width: 100%;
}

.success-btn {
    border-top: 1px solid #f5f5f5;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.success-btn button {
    width: 70%;
    height: 80rpx;
    background-color: #63be62;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}

.image-container {
    width: 100%;
    border-radius: 10px;
    overflow: hidden;
}

.image-container image {
    width: 100%;
}

.picker-mask {
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    background-color: rgba(0, 0, 0, 0.6);
}

.picker-container {
    width: 100%;
    padding-top: 60rpx;
    background-color: #fff;
    margin: 0 auto;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.button-container {
    width: 100%;
    box-sizing: border-box;
    padding: 5%;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.button-container button {
    /* width: 200rpx; */
    font-size: 16px;
    padding: 0 50rpx;
    border-radius: 20px;
}

.button-container .cancel {
    background-color: #bfbec1;
    color: #000;
}

.button-container .confirm {
    background-color: #fd7321;
    color: #fff;
}

.picker-container .time-cell {
    width: 100%;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
