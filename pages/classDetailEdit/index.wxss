
.page {
  width: 90%;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}




.input_container {
  width: 100%;
  margin: 30rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.input_container text {
  height: 70rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #AAABAC;
  white-space: nowrap;
}
.input_container input {
  width: 100%;
  height: 70rpx;
  padding: 0 20px;
  box-sizing: border-box;
  border-radius: 20px;
  background-color: #F5F6F7;
  color: #414141;
  /* text-align: center; */
}

.input_container .button-container {
    flex: 1;
    white-space: nowrap;
    font-size: 20rpx;
    margin-left: 20rpx;
}
.input_container .button-container button {
    font-size: 30rpx;
    background-color: #63BE62;
    color: #fff;
}

.input_container picker {
  width: 100%;
}

.success-btn {
  border-top:  1px solid #f5f5f5;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.success-btn button {
  width: 70%;
  height: 80rpx;
  background-color: #63BE62;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}