
page {
  background-color: #f5f5f5
}

.ad-swiper-container {
  width: 100vw;
  height: auto;
  margin: auto;
  border-radius: 5px;
  overflow: hidden;
  box-sizing: border-box;
  padding: 10rpx 2.5vw 0;
  /* background-color: #fff; */
}


.ad-swiper-container image {
  width: 100%;
}

.menu-section {
  width: 100%;
  box-sizing: border-box;
  padding: 5%;
  background-color: #f5f5f5;
  margin: auto;
}

.menu-section .title {
  font-size: 32rpx;
  font-weight: bold;
}

.class-menu-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.class-menu-container .menu-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.class-menu-container .menu-item image {
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx 0;
  /* border-radius: 5px; */
}

.class-menu-container .menu-item text {
  color: #8a8a8a;
  font-size: 30rpx;
}

.class-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 5%;
  background-color: #fff;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.class-container .class-section {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.class-container .class-section .title {
  font-weight: bold;
  font-size: 32rpx;
}

.class-container .class-section .question {
   font-size: 28rpx;
   color: #8a8a8a;
}

.class-item {
  width: 100%;
  min-height: 150rpx;
  box-sizing: border-box;
  padding: 10px;
  margin: 40rpx auto 0;
  border-radius: 5px;
  box-shadow:  0 0 10px rgba(0, 0, 0, .16);
  display: flex;
  justify-content: space-between;
}

.class-item .image {
  width: 30%;
}

.class-item .class-info {
  flex: 1;
  height: inherit;
  margin-left: 20px; 
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.class-info .common {
  width: 100%;
  align-items: center;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}


.class-item .class-info .class-title {
  margin-left: -5px;
  font-size: 32rpx;
  font-weight: bold;
}

.class-item .class-info .free {
  background-color: #FD7321;
  color: #fff;
  font-weight: bold;
  padding: 0 5px;
  border-radius: 5px;
}
.common .listen {
  padding: 2px 15px;
  background-color: #FBFBFB;
  border-radius: 10px;
  color: #FD7321;
  font-size: 28rpx;
}

.mask-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, .6);  
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 1;
    transition: opacity 400ms linear;
    z-index: 999;
}

.mask-container.active {
    opacity: 1;
    z-index: 999;
    top: 0;
}

.mask-container .sale {
    width: 80%;
    border-radius: 5px;
    border: 5px sod #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.mask-container .sale .sale-image {
    width: 100%;
    border: 4rpx solid #fff;
    border-radius: 5px;

}
.mask-container .close {
    margin-top: 20px;
    width: 80rpx;
    height: 80rpx;
}