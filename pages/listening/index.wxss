/* pages/listening/index.wxss */
.video-container {
    width: 100%;
    height: 400rpx;
}
.video-container video {
    width: 100%;
    height: 100%;
}

.class-menu .scroll_h {
    width: 90%;
    height: 100rpx;
    margin: auto;
    white-space: nowrap;
    display: flex;
    align-items: center;
}

.class-menu .scroll_h .scroll_h_item {
    height: inherit;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.class-menu .scroll_h .scroll_h_item .class-type {
    width: auto;
    height: 40rpx;
    padding: 5px 10px;
    border-radius: 20px;
    background-color: #FD7321;
    margin-right: 10px;
    color: #fff;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}
.class-menu .scroll_h .scroll_h_item .active {
    background-color: #63BE62
}

.class-menu-title {
    width: 90%;
    margin: auto;
    height: 80rpx;
    display: flex;
    align-items: center;
}


.unit-container scroll-view {
    width: 100%;
    box-sizing: border-box;
}

.video-scroll {
    height: calc(100vh - 400rpx - 100rpx);
}

.image-scroll {
   height: calc(100vh - 100rpx); 
}

.unit-title {
    width: 90%;
    margin: auto;
    height: 80rpx;
    display: flex;
    align-items: center;
}

.unit-item {
    width: 90%;
    height: auto;
    margin: auto;
    box-sizing: border-box;
    padding: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #8a8a8a;
    border-radius: 5px;
    margin-top: 20rpx;
}

.unit-item .unit {
    min-width: 100rpx;
}

.unit-item .content {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.unit-item .play {
    width: 40rpx;
    height: 40rpx;
}

.unit-item .down {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}


.unit-image-item {
    width: 80%;
    /* height: calc((100vh - 100rpx)/2); */
    margin: 50rpx auto 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    font-weight: bold;
}



.swiper-container swiper {
    height: calc((100vh - 120rpx)/2);
}

.unit-image-item image{
    width: 100%;
   
}

.process-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, .8);  
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 1;
    transition: opacity 400ms linear;
    z-index: 999;
    color: #fff;
}

.process-container progress {
    width: 80vw;
} 

.process-container button {
    font-size: 30rpx;
    margin-top: 20rpx;
}