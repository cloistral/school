.mine-info {
    width: 100vw;
    box-sizing: border-box;
    padding: 0 2.5%;
    margin: auto;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.mine-info .user-info-box {
    width: 100%;
    display: flex;
    align-items: center;
    position: relative;
}

.mine-info .user-info-box .bg-image {
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.mine-info .user-info-box .name {
    margin-left: 23vw;
    color: #fff;
    z-index: 1;
}

.mine-info .login-in-box {
    width: 100%;
    padding: 50rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.mine-info .login-in-box button {
    background-color: transparent;
    border-radius: 0;
    border: none;
    margin: 0;
    padding: 0;
    font-size: 40rpx;
}

.mine-info .head-image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.16);
}

.mine-info .edit {
    width: 30rpx;
    height: 30rpx;
}

.button-box {
    width: 95%;
    margin: 20rpx auto;
    box-sizing: border-box;
    padding: 2.5vw;
    border-radius: 10px;
    background-color: #f5f5f5;
}

.button-container {
    width: 100%;
    height: 110rpx;
    background-color: #fff;
    border: 1px solid #8a8a8a;
    border-radius: 5px;
    box-sizing: border-box;
    padding: 0 2.5%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #8a8a8a;
}

.button-container.serve {
    margin: 20rpx 0;
}

.button-container.order {
    margin-bottom: 20rpx;
}

.button-container view {
    flex: 1;
    white-space: nowrap;
}

.button-container .content {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}


.button-container.login-out {
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
}

.button-container .menu-icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 10rpx;
}

.button-container  image {
    width: 40rpx;
    height: 40rpx;
    /* margin-right: 10px; */
}

.mine-image-bottom {
    width: 95%;
    margin: 40rpx auto 0;
}

.mine-image-bottom image {
    width: 100%;
}
