/* pages/mine/mine.wxss */

page {
  background-color: #FBFBFB;
}

.mine-info {
  width: 100vw;
  box-sizing: border-box;
  padding: 0 5%;
  margin: auto;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
}

.mine-info .user-info-box {
  width: 100%;
  padding: 50rpx 0;
  display: flex;
  align-items: center;
  
}


.mine-info .user-info-box .name {
  margin: 0 10rpx 0 20rpx;
}

.mine-info .login-in-box {
  width: 100%;
  padding: 50rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}


.mine-info .login-in-box button {
  background-color: transparent;
  border-radius: 0;
  border: none;
  margin: 0;
  padding: 0;
  font-size: 40rpx;
}

.mine-info .head-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow:  0 0 10px rgba(0, 0, 0, .16);
}


.mine-info .edit {
  width: 30rpx;
  height: 30rpx;
}

.button-container {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
 
  box-sizing: border-box;
  padding: 0 5%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #8a8a8a;
}

.button-container.serve {
   margin: 20rpx 0; 
} 

.button-container.order {
  margin-bottom: 1px;
}

.button-container view {
  flex: 1;
}

.button-container.login-out {
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.button-container  image {
  width: 40rpx;
  height: 40rpx;
  /* margin-right: 10px; */
}

