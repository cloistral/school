/* pages/classList/index.wxss */
.class-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 5%;
  background-color: #fff;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}


.class-item {
  width: 100%;
  min-height: 150rpx;
  box-sizing: border-box;
  padding: 10px;
  margin: 40rpx auto 0;
  border-radius: 5px;
  box-shadow:  0 0 10px rgba(0, 0, 0, .16);
  display: flex;
  justify-content: space-between;
}

.class-item .image {
  width: 30%;
}

.class-item .class-info {
  flex: 1;
  height: inherit;
  margin-left: 20px; 
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.class-info .common {
  width: 100%;
  align-items: center;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}


.class-item .class-info .class-title {
  margin-left: -5px;
  font-size: 32rpx;
  font-weight: bold;
}

.class-item .class-info .free {
  background-color: #FD7321;
  color: #fff;
  font-weight: bold;
  padding: 0 5px;
  border-radius: 5px;
}
.common .listen {
  padding: 2px 15px;
  background-color: #FBFBFB;
  border-radius: 10px;
  color: #FD7321;
  font-size: 28rpx;
}