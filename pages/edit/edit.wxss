
.page {
  width: 80%;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}




.sex_container {
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sex_container .common-container {
  width: 200rpx;
  height: 70rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 20px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color:#F5F6F7;
}

.sex_container .common-container image {
  width: 50rpx;
  height: 50rpx;
}

.sex_container .common-container text {
  color: #DBDCDD;
}

.input_container {
  width: 100%;
  margin: 30rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.input_container text {
  height: 70rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #AAABAC;
  white-space: nowrap;
}
.input_container input {
  width: 100%;
  height: 70rpx;
  padding: 0 20px;
  box-sizing: border-box;
  border-radius: 20px;
  background-color: #F5F6F7;
  color: #414141;
  /* text-align: center; */
}

.input_container picker {
  width: 100%;
}

.success-btn {
  border-top:  1px solid #f5f5f5;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.success-btn button {
  width: 70%;
  height: 80rpx;
  background-color: #63BE62;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}