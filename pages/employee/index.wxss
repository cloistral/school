.button-container {
    width: 90%;
    height: 110rpx;
    margin: 40rpx auto 0;
    background-color: #fff;
    border: 1px solid #8a8a8a;
    border-radius: 5px;
    box-sizing: border-box;
    padding: 0 2.5%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #8a8a8a;
}

.button-container.order {
    margin-bottom: 20rpx;
}

.button-container view {
    flex: 1;
    white-space: nowrap;
}

.button-container .content {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}


.button-container.login-out {
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
}

.button-container .menu-icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 10rpx;
}

.button-container  image {
    width: 40rpx;
    height: 40rpx;
    /* margin-right: 10px; */
}