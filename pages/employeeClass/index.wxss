/* pages/employeeClass/index.wxss */

.order-container {
    width: 90vw;
    margin: 30rpx auto;
    border-radius: 10px;
    box-sizing: border-box;
    padding: 5vw;
    box-shadow:  0 0 10px rgba(0, 0, 0, .16);
}

.order-item {
    padding: 10rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #8a8a8a;
    font-size: 28rpx;
}

.border {
    border-bottom: 2px solid #f5f5f5;
}
.border text {
    width: 50%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow:ellipsis;
}



.service {
    width: 90vw;
    margin: 15rpx auto;
    border-radius: 10px;
    box-sizing: border-box;
    padding: 5vw;
    box-shadow:  0 0 10px rgba(0, 0, 0, .16);
}


.service .service-item {
    padding: 10rpx 0;
    display: flex;
    align-items: first baseline;
}

.service .service-item .title {
    white-space: nowrap;
}

.service .service-item .content {
    color: #8a8a8a;
}

.service-item .content.bold {
    font-weight: bold;
}