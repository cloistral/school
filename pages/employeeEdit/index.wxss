/* pages/employeeEdit/index.wxss */
.image-container image {
    width: 90%;
    margin: 10px 5%;
}

.input_container {
    width: 90%;
    box-sizing: border-box;
    padding: 15rpx 10rpx;
    margin: 30rpx auto 0;
    border-radius: 5px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.input_container.bg {
    background-color: #207caa;
    color: #fff;
}

.input_container .time {
    border: 1px solid #8a8a8a;
}

.input_container .title {
    white-space: nowrap;
    margin-right: 10rpx;
}

.input_container input {
    flex: 1;
    height: 70rpx;
    padding: 0 20px;
    box-sizing: border-box;
    border-radius: 5px;
    background-color: #fff;
    color: #414141;
    text-align: center;
}

.input_container  .button {
    height: 50rpx;
    white-space: nowrap;
    margin-left: 10rpx;
    padding: 5rpx 25rpx;
    background-color: #fd7321;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.success-btn {
    border-top: 1px solid #f5f5f5;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.success-btn button {
    width: 70%;
    height: 80rpx;
    background-color: #63be62;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}