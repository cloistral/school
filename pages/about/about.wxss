/* pages/about/about.wxss */

page {
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.about-container {
    width: 90vw;
    height: auto;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.about-container .title {
    font-size: 36rpx;
    font-weight: bold;
}

.about-container .content {
    width: 100%;
    text-indent: 2em;
    margin-top: 20rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    color: #8a8a8a;
}


.title {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 36rpx;
}

.image-container {
    width: 90%;
    margin: auto;
}

.image-container image {
    width: 100%;
}
