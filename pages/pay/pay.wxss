.pay-info-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.pay-info-container image {
  width: 150rpx;
  height: 150rpx;
  margin-top: 20rpx;
}
.pay-info-container .pay-info {
  font-size: 28rpx;
  margin: 20rpx;
  color: #888;
}

.pay-info-container .money {
  font-size: 40rpx;
  color: #C2803A;
}

.pay-info-container .pay-way {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 5%;
  margin-top: 30rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ad-tip {
  margin-top: 50rpx;
  color: #4AB51F;
}

.button-container {
    margin-top: 40rpx;
    width: 80%;
    display: flex;
    align-items: center;
}

.button-container button {
    font-size: 30rpx;
}

